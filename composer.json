{
    "name": "phpfmt-next/fmt",
    "type": "application",
    "description": "A script to automatically fix K&R and PSR-1/2 Coding Standard.",
    "license": "BSD-3-Clause",
    "keywords": ["language syntax", "formatter", "formatting", "psr1", "psr2", "coding", "style"],
    "homepage": "https://github.com/phpfmt-next/fmt",
    "bin": [
        "bin/fmt.phar",
        "bin/refactor.phar"
    ],
    "authors": [
        {
            "name": "Carlos C",
            "email": "carlos@cirello.eu"
        }
    ],
    "support": {
        "issues": "https://github.com/phpfmt-next/fmt/issues",
        "source": "https://github.com/phpfmt-next/fmt/fmt"
    },
    "scripts": {
        "build": "php scripts/build.php",
        "format": "php scripts/format.php",
        "test": "php scripts/test.php"
    },
    "require": {
        "php": ">=5.6.0",
        "ext-tokenizer": "*"
    },
    "require-dev": {
        "dericofilho/csp": "2.0.*",
        "phpunit/php-code-coverage": "2.0.*",
        "satooshi/php-coveralls": "0.7.*",
        "symfony/console": "2.7.*"
    },
    "repositories": [{
        "type": "package",
        "package": {
            "name": "dericofilho/csp",
            "version": "2.0.0",
            "source": {
                "url": "https://github.com/phpfmt-next/csp.git",
                "type": "git",
                "reference": "master"
            }
        }
    }]
}
